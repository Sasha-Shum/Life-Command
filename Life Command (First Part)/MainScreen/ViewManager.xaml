			<GroupBox.Background>
				<RadialGradientBrush>
					<GradientStop Color="White" Offset="0"/>
					<GradientStop Color="#FFF7E953" Offset="1"/>
				</RadialGradientBrush>
			</GroupBox.Background>
		</GroupBox>
