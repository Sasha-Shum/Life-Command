			<ComboBox.BorderBrush>
				<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
					<GradientStop Color="#FFE7EFFF" Offset="0"/>
					<GradientStop Color="#FFA70F0F" Offset="1"/>
				</LinearGradientBrush>
			</ComboBox.BorderBrush>
		</ComboBox>
